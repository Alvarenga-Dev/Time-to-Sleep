<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_default">

    <TextView
        android:id="@+id/articleId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"
        android:text="@string/title_list_value_init_artigos"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/font_size_normal_smartphone"
        app:layout_constraintBottom_toBottomOf="@+id/ivIconArticlesId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivIconArticlesId"
        app:layout_constraintTop_toTopOf="@+id/ivIconArticlesId" />

    <TextView
        android:id="@+id/divArticlesId"
        android:layout_width="220dp"
        android:layout_height="1dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:background="@color/primaryLightColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/articleId" />

    <ImageView
        android:id="@+id/ivIconArticlesId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/ic_description_articles_help"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_help_articles_sing_language" />

</androidx.constraintlayout.widget.ConstraintLayout>